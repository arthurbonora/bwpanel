#!/bin/bash
CONFIG_FILE="/opt/bwpanel/config.conf"
[ -f "$CONFIG_FILE" ] && source "$CONFIG_FILE"

echo "---------------------------------------------"
echo "BWPanel CLI v${BWCLI_VERSION:-1.0}"
echo "Comandos disponíveis:"
echo ""
echo "  bwpanel-adduser <usuario> <email> <senha> <domínio>"
echo "      Cria um novo site e usuário BWPanel"
echo ""
echo "  bwpanel-deluser <usuario>"
echo "      Remove um site e usuário BWPanel"
echo ""
echo "  bwpanel-help"
echo "      Exibe esta tela de ajuda"
echo ""
echo "Arquivos de configuração: $CONFIG_FILE"
echo "---------------------------------------------"
